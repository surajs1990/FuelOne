<?xml version="1.0" encoding="utf-8"?>
<com.infideap.drawerbehavior.AdvanceDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg">

    <include
        layout="@layout/app_bar_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/splash_bg">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="180sp"
                android:background="@color/menucolor">

                <ImageView
                    android:layout_marginTop="10sp"
                    android:id="@+id/imageView"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:src="@drawable/user_profile" />

                <TextView
                    android:textColor="@color/buttonTextColor"
                    android:textSize="18sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="email@gmail.com"/>

            </LinearLayout>

            <LinearLayout
                android:background="@color/menucolor"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/icon_home"
                        android:layout_width="25sp"
                        android:layout_height="25sp" />

                    <TextView
                        android:layout_marginLeft="10sp"
                        android:id="@+id/homeTxt"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home" />

                </LinearLayout>


                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"/>

                <LinearLayout
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/dips_"
                        android:layout_width="25sp"
                        android:layout_height="25sp" />

                    <TextView
                        android:id="@+id/dipTxt"
                        android:textSize="20sp"
                        android:paddingLeft="10sp"
                        android:textColor="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dip_entry" />

                </LinearLayout>


                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"/>

                <LinearLayout
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/nozzel_"
                        android:layout_width="25sp"
                        android:layout_height="25sp" />

                    <TextView
                        android:id="@+id/nozzelTxt"
                        android:textSize="20sp"
                        android:paddingLeft="10sp"
                        android:textColor="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nozzel" />

                </LinearLayout>





                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"/>

                <LinearLayout
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/statistics_"
                        android:layout_width="25sp"
                        android:layout_height="25sp" />

                    <TextView
                        android:id="@+id/reposrtTxt"
                        android:textSize="20sp"
                        android:paddingLeft="10sp"
                        android:textColor="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/report" />

                </LinearLayout>




                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"/>

                <LinearLayout
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/users_"
                        android:layout_width="25sp"
                        android:layout_height="25sp" />

                    <TextView
                        android:id="@+id/profileTxt"
                        android:textSize="20sp"
                        android:paddingLeft="10sp"
                        android:textColor="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/profile" />

                </LinearLayout>


                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"/>

                <LinearLayout
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/settings_gears"
                        android:layout_width="25sp"
                        android:layout_height="25sp" />

                    <TextView
                        android:id="@+id/settingTxt"
                        android:textSize="20sp"
                        android:paddingLeft="10sp"
                        android:textColor="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_" />

                </LinearLayout>

                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"/>

                <LinearLayout
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/about_us"
                        android:layout_width="25sp"
                        android:layout_height="25sp" />

                    <TextView
                        android:id="@+id/aboutTxt"
                        android:textSize="20sp"
                        android:paddingLeft="10sp"
                        android:textColor="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_us" />

                </LinearLayout>

                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"/>

                <LinearLayout
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/contact_"
                        android:layout_width="25sp"
                        android:layout_height="25sp" />

                    <TextView
                        android:id="@+id/contactTxt"
                        android:textSize="20sp"
                        android:paddingLeft="10sp"
                        android:textColor="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us" />

                </LinearLayout>

                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"/>

                <LinearLayout
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/sign_out"
                        android:layout_width="25sp"
                        android:layout_height="25sp" />

                    <TextView
                        android:id="@+id/signoutTxt"
                        android:textSize="20sp"
                        android:paddingLeft="10sp"
                        android:textColor="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/signOut" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </android.support.design.widget.NavigationView>

</com.infideap.drawerbehavior.AdvanceDrawerLayout>
