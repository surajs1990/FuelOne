<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="10sp"
                android:id="@+id/LayoutOne"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/fileName"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:text="----"
                    android:textColor="@color/colorBlack_1000"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="2"
                android:padding="10sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/viewExel"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/chartEdit"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:text="@string/_view"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/selectExel"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/chartEdit"
                    android:layout_marginTop="10dp"
                    android:background="@color/oreng_bg"
                    android:gravity="center"
                    android:text="@string/_select"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>


