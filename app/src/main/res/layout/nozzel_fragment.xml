<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:switch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/parentlayout"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/layout_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/l1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/configured_nozzel"
                android:textColor="@color/subHeadingColor"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/plusImage"
                android:layout_marginTop="20sp"
                android:src="@drawable/plus_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="5sp"
            android:layout_above="@+id/nextButton"
            android:layout_below="@+id/headerLayout"
            android:layout_width="match_parent"
            android:id="@+id/GetNozzelList"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/addLayout"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_width="55sp"
            android:layout_height="55sp">

            <ImageView
                android:src="@drawable/add_"
                android:layout_width="25sp"
                android:layout_height="25sp" />

        </LinearLayout>


    </RelativeLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
