<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10sp"
    android:layout_height="match_parent">

    <mobicloud.fuelone.adapter.MultiSelectionSpinner
        android:id="@+id/spinner"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="45sp"/>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/tank_spinner"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_marginTop="10sp"
        android:layout_below="@+id/tank_spinner"
        android:id="@+id/fuleType_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <mobicloud.fuelone.adapter.MultiSelectionSpinner
        android:layout_marginTop="10sp"
        android:layout_below="@+id/fuleType_spinner"
        android:id="@+id/nozzel_spinner"
        android:layout_width="match_parent"
        android:background="@drawable/spinner_bg"
        android:layout_height="45sp"/>


    <EditText
        android:layout_marginTop="10sp"
        android:id="@+id/tankName"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nozzel_spinner"
        android:background="@drawable/_border"
        android:gravity="center_vertical"
        android:hint="Enter Tanker Name"
        android:inputType="textCapWords"
        android:paddingRight="10sp"
        android:singleLine="true"
        android:textColor="@color/subHeadingColor"
        android:textSize="15sp"/>

    <EditText
        android:layout_marginTop="10sp"
        android:id="@+id/capacity"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tankName"
        android:background="@drawable/_border"
        android:gravity="center_vertical"
        android:hint="Enter Tank Capacity in ltr"
        android:inputType="number"
        android:paddingRight="10sp"
        android:singleLine="true"
        android:textColor="@color/subHeadingColor"
        android:textSize="15sp" />

    <EditText

        android:drawableRight="@drawable/drop_down1"
        android:focusable="false"
        android:layout_marginTop="10sp"
        android:id="@+id/chartEdit"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/capacity"
        android:background="@drawable/_border"
        android:gravity="center_vertical"
        android:hint="Select Chart"
        android:inputType="number"
        android:paddingRight="15sp"
        android:singleLine="true"
        android:textColor="@color/subHeadingColor"
        android:textSize="15sp" />



    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chartEdit"
        android:layout_marginTop="20dp"
        android:background="@color/oreng_bg"
        android:gravity="center"
        android:text="@string/_submit"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:visibility="gone"
        android:layout_below="@+id/submit"
        android:textStyle="bold"
        android:id="@+id/chart"
        android:layout_marginTop="20sp"
        android:background="@color/oreng_bg"
        android:text="@string/_chart"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50sp" />


</RelativeLayout>