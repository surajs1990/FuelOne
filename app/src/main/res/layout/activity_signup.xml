<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/parentLayout"
    android:focusableInTouchMode="true"
    android:background="@drawable/splash">

    <LinearLayout
        android:id="@+id/backLayout"
        android:gravity="center"
        android:layout_width="50sp"
        android:layout_height="50sp">

        <ImageView
            android:src="@drawable/ic_left_arrow_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <RelativeLayout
        android:layout_marginBottom="15sp"
        android:background="@drawable/l_bg"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:paddingLeft="15sp"
        android:layout_marginTop="50sp"
        android:layout_marginRight="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/text_color"
            android:id="@+id/titleLogin"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Sign Up Here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/l1"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/titleLogin"
            android:layout_marginRight="30sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/fullname_"
                android:layout_width="25sp"
                android:layout_height="25sp"/>

            <EditText
                android:inputType="textCapWords"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="30sp"
                android:id="@+id/fullNameEdit"
                android:drawablePadding="10sp"
                android:hint="Full Name"
                android:background="@null"
                android:layout_below="@+id/titleLogin"
                android:layout_width="match_parent"
                android:layout_height="40sp"/>

        </LinearLayout>


        <View
            android:layout_marginRight="30sp"
            android:id="@+id/view1"
            android:layout_marginTop="2sp"
            android:layout_below="@+id/l1"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/l2"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/view1"
            android:layout_marginRight="30sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/locked"
                android:layout_width="25sp"
                android:layout_height="25sp"/>

            <EditText
                android:layout_marginLeft="10sp"
                android:inputType="textEmailAddress"
                android:layout_marginRight="30sp"
                android:id="@+id/emailEdit"
                android:drawablePadding="10sp"
                android:hint="Email"
                android:background="@null"
                android:layout_below="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="40sp"/>

        </LinearLayout>



        <View
            android:layout_marginRight="30sp"
            android:id="@+id/view2"
            android:layout_marginTop="2sp"
            android:layout_below="@+id/l2"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/l3"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/view2"
            android:layout_marginRight="30sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/user"
                android:layout_width="25sp"
                android:layout_height="25sp"/>

            <EditText
                android:layout_marginLeft="10sp"
                android:inputType="textEmailAddress"
                android:layout_marginRight="30sp"
                android:id="@+id/userNameEdit"
                android:drawablePadding="10sp"
                android:hint="UserName"
                android:background="@null"
                android:layout_below="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="40sp"/>

        </LinearLayout>


        <View
            android:layout_marginRight="30sp"
            android:id="@+id/view3"
            android:layout_marginTop="2sp"
            android:layout_below="@+id/l3"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/l4"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/view3"
            android:layout_marginRight="30sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@drawable/password_"
                android:layout_width="25sp"
                android:layout_height="25sp"/>

            <EditText
                android:layout_marginLeft="10sp"
                android:inputType="textPassword"
                android:layout_marginRight="30sp"
                android:id="@+id/passwordEdit"
                android:drawablePadding="10sp"
                android:hint="Password"
                android:background="@null"
                android:layout_below="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="40sp"/>

        </LinearLayout>


        <View
            android:layout_marginRight="30sp"
            android:id="@+id/view4"
            android:layout_marginTop="2sp"
            android:layout_below="@+id/l4"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/l5"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/view4"
            android:layout_marginRight="30sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/password_"
                android:layout_width="25sp"
                android:layout_height="25sp"/>

            <EditText
                android:layout_marginLeft="10sp"
                android:inputType="textPassword"
                android:layout_marginRight="35sp"
                android:id="@+id/confpassEdit"
                android:drawablePadding="10sp"
                android:hint="Confirm Password"
                android:background="@null"
                android:layout_below="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="40sp"/>

        </LinearLayout>


        <View
            android:layout_marginRight="35sp"
            android:id="@+id/view5"
            android:layout_marginTop="2sp"
            android:layout_below="@+id/l5"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>


        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/l6"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/view5"
            android:layout_marginRight="40sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/mobile_"
                android:layout_width="25sp"
                android:layout_height="25sp"/>

            <EditText
                android:layout_marginLeft="10sp"
                android:inputType="phone"
                android:layout_marginRight="40sp"
                android:id="@+id/phoneEdit"
                android:drawablePadding="10sp"
                android:hint="Mobile Number"
                android:background="@null"
                android:layout_below="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="40sp"/>


        </LinearLayout>

        <View
            android:layout_marginRight="40sp"
            android:id="@+id/view6"
            android:layout_marginTop="2sp"
            android:layout_below="@+id/l6"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

        <TextView

            android:layout_marginBottom="10sp"
            android:visibility="gone"
            android:textSize="15sp"
            android:text="Forgot Password? Reset"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/loginLayout"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="80sp"
            android:layout_height="80sp">

            <ImageView
                android:src="@drawable/btn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>